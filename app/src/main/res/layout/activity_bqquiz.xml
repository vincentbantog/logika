<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.basiQuiz.BQQuizActivity">

    <TextView
        android:id="@+id/txtQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Count: "
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtBQScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="Score: "
        android:visibility="gone"/>


    <TextView
        android:id="@+id/txtEasyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="Easy Score: "
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Exit game" />


    <RelativeLayout
        android:id="@+id/relLayoutProgressBar"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/lightBlue">

        <ProgressBar
            android:id="@+id/scoreBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/timer_bar_design_basiquiz" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutScoreBar"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_below="@+id/relLayoutProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/lightBlue">

        <ImageView
            android:id="@+id/imageViewProgressBar1"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/image_progress_bar_basicquiz_neutral" />

        <ImageView
            android:id="@+id/imageViewProgressBar2"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar1"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar3"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar2"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar4"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar3"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar5"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar4"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar6"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar5"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar7"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar6"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar8"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar7"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar9"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar8"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>

        <ImageView
            android:id="@+id/imageViewProgressBar10"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageViewProgressBar9"
            android:src="@drawable/image_progress_bar_basicquiz_neutral"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frameLayoutQuestions"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_below="@id/relLayoutScoreBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Question will be displayed here" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutRadioGroupChoices"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_below="@+id/frameLayoutQuestions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageViewChoice1"
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:src="@drawable/basiquiz_radio_button_default_state" />

        <ImageView
            android:id="@+id/imageViewChoice2"
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:layout_marginTop="62.5dp"
            android:src="@drawable/basiquiz_radio_button_default_state" />

        <ImageView
            android:id="@+id/imageViewChoice3"
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:layout_marginTop="125dp"
            android:src="@drawable/basiquiz_radio_button_default_state" />

        <ImageView
            android:id="@+id/imageViewChoice4"
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:layout_marginTop="187.5dp"
            android:src="@drawable/basiquiz_radio_button_default_state" />

        <RadioGroup
            android:id="@+id/radioGroupChoices"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radioBtnOption1"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@drawable/radio_selector_basiquiz"
                android:button="@android:color/transparent"
                android:text="Option 1"
                android:textAlignment="center" />


            <RadioButton
                android:id="@+id/radioBtnOption2"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@drawable/radio_selector_basiquiz"
                android:button="@android:color/transparent"
                android:text="Option 2"
                android:textAlignment="center" />


            <RadioButton
                android:id="@+id/radioBtnOption3"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@drawable/radio_selector_basiquiz"
                android:button="@android:color/transparent"
                android:text="Option 3"
                android:textAlignment="center" />


            <RadioButton
                android:id="@+id/radioBtnOption4"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@drawable/radio_selector_basiquiz"
                android:button="@android:color/transparent"
                android:text="Option 4"
                android:textAlignment="center" />

        </RadioGroup>


    </RelativeLayout>


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayoutRadioGroupChoices"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:text="Confirm" />


</RelativeLayout>