<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.basiQuiz.BQQuizActivity">


    <RelativeLayout
        android:id="@+id/relLayoutProgressBar"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/lightBlue">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutScoreBar"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_below="@+id/relLayoutProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/lightBlue">

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutQuestions"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_below="@id/relLayoutScoreBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/lightBlue">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relLayoutAnswerChoices"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_below="@id/frameLayoutQuestions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        >

        <Button
            android:layout_width="180dp"
            android:layout_height="117dp"
            android:text="Option 1"
            android:id="@+id/btnChoice1" />

        <Button
            android:layout_width="180dp"
            android:layout_height="117dp"
            android:text="Option 2"
            android:id="@+id/btnChoice2"
            android:layout_alignParentEnd="true"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="117dp"
            android:text="Option 3"
            android:id="@+id/btnChoice3"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="117dp"
            android:text="Option 4"
            android:id="@+id/btnChoice4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout>