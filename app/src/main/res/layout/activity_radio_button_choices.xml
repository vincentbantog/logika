<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".gameActivities.logicSim.RadioButtonChoices">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBack"
        android:layout_marginTop="15dp"
        android:text="00:30"
        android:textSize="30dp"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/txtDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTimer"
        android:layout_marginTop="15dp"
        android:text="Difficulty: "
        android:textSize="14dp"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:text="Score: 0"
        android:textSize="26dp"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/txtQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtScore"
        android:layout_alignParentEnd="true"
        android:text="Question: 1/x"
        android:textSize="26dp"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be the question\nHere will be the question\nHere will be the question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textSize="24dp"
        android:id="@+id/txtQuestion"
        android:freezesText="true"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_centerVertical="true" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_1"
            android:text="Option 1"
            android:freezesText="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_2"
            android:text="Option 2"
            android:freezesText="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_3"
            android:text="Option 3"
            android:freezesText="true"/>


    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:id="@+id/btnConfirmNext"
        android:freezesText="true"/>



</RelativeLayout>