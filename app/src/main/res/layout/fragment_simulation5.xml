<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.logiQuiz.CircuitFragments.SimulationFragment5">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Question 5 Simulation" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:id="@+id/buttonARelLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/simulation_button_off_state_a"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/toggleImageButton1" />

        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:textOff=""
            android:textOn=" "
            android:id="@+id/toggleButton1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/buttonARelLayout"
        android:id="@+id/buttonBRelLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/simulation_button_off_state_b"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/toggleImageButton2" />

        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:textOff=""
            android:textOn=" "
            android:id="@+id/toggleButton2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/buttonBRelLayout"
        android:id="@+id/buttonCRelLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/simulation_button_off_state_c"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/toggleImageButton3" />

        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:textOff=""
            android:textOn=" "
            android:id="@+id/toggleButton3"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/simulation_output_display_on"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="110dp"
        android:id="@+id/outputDisplay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:textSize="24dp"
        />

</RelativeLayout>