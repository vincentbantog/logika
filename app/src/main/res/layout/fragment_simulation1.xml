<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.logiQuiz.CircuitFragments.SimulationFragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SIMULATION FOR QUESTION 1"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/simulation_button_off_state_a"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:id="@+id/toggleInputButton1"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/simulation_button_off_state_b"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_marginTop="180dp"
        android:layout_marginStart="20dp"
        android:id="@+id/toggleInputButton2"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/simulation_output_display_on"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="110dp"
        android:id="@+id/outputDisplay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:text="Press any Button to Begin the Simulation!"/>


</RelativeLayout>