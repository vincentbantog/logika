<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.TorF.TorFQuizActivity">

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:" />

    <TextView
        android:id="@+id/txtLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Lives: " />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtLives"
        android:text="00:30 " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Difficulty Level" />

    <RelativeLayout
        android:id="@+id/relLayoutLives"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/lightBlue"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageViewLives1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/simulation_output_display_off" />

        <ImageView
            android:id="@+id/imageViewLives2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/imageViewLives1"
            android:src="@drawable/simulation_output_display_off" />

        <ImageView
            android:id="@+id/imageViewLives3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/imageViewLives2"
            android:src="@drawable/simulation_output_display_off" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ProgressBar
                android:id="@+id/timerBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/timer_bar_design" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutQuestion"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_below="@+id/relLayoutLives"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/lightBlue"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtQuestionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="00/10" />

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Here lies the question" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutRadioGroupChoice"
        android:layout_width="330dp"
        android:layout_height="110dp"
        android:layout_below="@id/relLayoutQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/radioGroupChoices"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/radioButtonOptionTrue"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@color/paleYellow"
                android:text="T"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radioButtonOptionFalse"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:background="@color/paleYellow"
                android:text="F"
                android:textAlignment="center" />

        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/relLayoutRadioGroupChoice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm" />

    </RelativeLayout>


</RelativeLayout>