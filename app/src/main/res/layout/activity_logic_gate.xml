<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivities.logiQuiz.LogicGate">


    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Back" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Logic Gate Simulation!"
        android:textSize="26dp" />

    <Button
        android:id="@+id/btnBeginNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1 -2 Logic Gates"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txtHighScoreNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Highscore: "
        android:layout_below="@+id/btnBeginNormal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnBeginHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="3 Logic Gates"
        android:layout_below="@+id/txtHighScoreNormal"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txtHighScoreHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Highscore: "
        android:layout_below="@+id/btnBeginHard"
        android:layout_marginTop="20dp"/>




</RelativeLayout>