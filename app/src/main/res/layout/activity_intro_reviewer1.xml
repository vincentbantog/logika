<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewerFragment.reviewerActivities.IntroFragments.ReviewerIntroActivity">

    <RelativeLayout
        android:id="@+id/relLayoutBackButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageViewBtnBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lq_001" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:id="@+id/txtPageNumber"/>

    <RelativeLayout
        android:id="@+id/relLayoutContent"
        android:layout_width="360dp"
        android:layout_height="530dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@color/yellow">

        <RelativeLayout
            android:id="@+id/relLayoutTitle"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/darkBlue">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="410dp"
            android:layout_below="@+id/relLayoutTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/lightBlue">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/contentFragmentContainer"
                    android:name="com.example.logika.ReviewerFragment.reviewerActivities.IntroFragments.ReviewerIntroFragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relLayoutContent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lightBlue">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Next"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relLayoutContent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@color/lightBlue">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Previous"/>


    </RelativeLayout>


</RelativeLayout>